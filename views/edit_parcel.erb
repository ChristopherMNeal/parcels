<h1>Update <%= @parcel.name() %></h1>

<form action="/parcels/<%= @parcel.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Edit Parcel Name</label>
  <input id="name" name="name" type="text">
  <label for="parcel_width">Edit Parcel Width</label>
  <input id="parcel_width" name="parcel_width" type="text">
  <label for="parcel_height">Edit Parcel Height</label>
  <input id="parcel_height" name="parcel_height" type="text">
  <label for="parcel_weight">Edit Parcel Weight</label>
  <input id="parcel_weight" name="parcel_weight" type="text">
  <label for="parcel_length">Edit Length</label>
  <input id="parcel_length" name="parcel_length" type="text">

  <button type="submit">Update</button>
</form>

<p><a href="/parcels">Return to Parcel list</a></p>

<form action="/parcels/<%= @parcel.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete Parcel</button>
</form>